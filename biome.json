{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": true,
    "maxSize": 1048576,
    "includes": [
      "**/*.{js,jsx,ts,tsx}",
      "**/*.{json,jsonc}",
      "**/*.md",
      "**/*.css",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/.next",
      "!**/out",
      "!**/coverage",
      "!**/.turbo",
      "!**/supabase/migrations",
      "!**/prisma/migrations",
      "!**/*.generated.*",
      "!**/*.gen.ts",
      "!**/env.d.ts"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "bracketSpacing": true,
    "useEditorconfig": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noAutofocus": "off",
        "useAltText": "warn",
        "useButtonType": "warn",
        "useHtmlLang": "warn"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off",
        "noForEach": "off",
        "noUselessFragments": "info",
        "useOptionalChain": "warn",
        "useSimplifiedLogicExpression": "warn"
      },
      "correctness": {
        "noChildrenProp": "warn",
        "noConstAssign": "error",
        "noInvalidUseBeforeDeclaration": "error",
        "noUnusedImports": "off",
        "noUnusedVariables": "off",
        "noVoidElementsWithChildren": "warn",
        "useExhaustiveDependencies": "off",
        "useHookAtTopLevel": "error",
        "useJsxKeyInIterable": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "warn"
      },
      "security": {
        "noBlankTarget": "warn",
        "noDangerouslySetInnerHtml": "warn"
      },
      "style": {
        "noDefaultExport": "off",
        "noImplicitBoolean": "off",
        "noNonNullAssertion": "off",
        "noParameterAssign": "off",
        "useConst": "off",
        "useExportType": "off",
        "useImportType": "off",
        "useFilenamingConvention": "off",
        "useSelfClosingElements": "warn",
        "useTemplate": "warn"
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "noConsole": "off",
        "noDebugger": "off",
        "noDoubleEquals": "warn",
        "noExplicitAny": "off",
        "noFocusedTests": "warn",
        "noSkippedTests": "off",
        "useAwait": "off"
      },
      "nursery": {
        "noFloatingPromises": "off",
        "noSecrets": "off"
      }
    },
    "domains": {
      "react": "recommended",
      "next": "recommended",
      "test": "recommended"
    }
  },
  "javascript": {
    "globals": ["React", "JSX", "NodeJS"],
    "parser": {
      "jsxEverywhere": false,
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSpacing": true
    }
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "trailingCommas": "none"
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100
    }
  },
  "overrides": [
    {
      "includes": [
        "**/app/**",
        "**/pages/**",
        "**/src/app/**",
        "**/src/pages/**",
        "**/*.page.{js,jsx,ts,tsx}",
        "**/api/**",
        "**/route.{js,ts}",
        "**/layout.{js,jsx,ts,tsx}",
        "**/loading.{js,jsx,ts,tsx}",
        "**/error.{js,jsx,ts,tsx}",
        "**/not-found.{js,jsx,ts,tsx}"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          },
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/server/**",
        "**/src/server/**",
        "**/*.server.{js,ts}",
        "**/trpc/**",
        "**/routers/**"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          },
          "correctness": {
            "noUnusedVariables": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/*.test.{js,jsx,ts,tsx}",
        "**/*.spec.{js,jsx,ts,tsx}",
        "**/__tests__/**",
        "**/test/**"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off",
            "noFocusedTests": "error",
            "noSkippedTests": "off",
            "noExplicitAny": "off",
            "useAwait": "off"
          },
          "correctness": {
            "noUnusedVariables": "off"
          },
          "nursery": {
            "noSecrets": "off"
          }
        }
      }
    },
    {
      "includes": [
        "*.config.{js,jsx,ts,tsx}",
        "**/next.config.*",
        "**/tailwind.config.*",
        "**/postcss.config.*",
        "**/prettier.config.*",
        "**/drizzle.config.*",
        "**/supabase/**",
        "**/prisma/**"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          },
          "suspicious": {
            "noConsole": "off"
          },
          "correctness": {
            "noUndeclaredVariables": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.d.ts", "**/types/**", "**/lib/types/**"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off",
            "useImportType": "off"
          },
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": ["**/components/**", "**/src/components/**", "**/ui/**"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.{jsx,tsx}"],
      "linter": {
        "rules": {
          "correctness": {
            "useJsxKeyInIterable": "error",
            "useHookAtTopLevel": "error"
          }
        }
      }
    },
    {
      "includes": ["**/*.md"],
      "formatter": {
        "lineWidth": 80
      }
    }
  ]
}
