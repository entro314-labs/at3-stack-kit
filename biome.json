{
  "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["src/**", "packages/*/src/**", "*.config.*", "*.json"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "attributePosition": "auto"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true,
        "noSvgWithoutTitle": "off",
        "useFocusableInteractive": "off",
        "useSemanticElements": "off",
        "useAriaPropsForRole": "off"
      },
      "complexity": {
        "recommended": true,
        "noExtraBooleanCast": "off",
        "noStaticOnlyClass": "off",
        "noUselessCatch": "off",
        "noUselessConstructor": "off",
        "noUselessFragments": "off",
        "noUselessLabel": "off",
        "noUselessLoneBlockStatements": "off",
        "noUselessRename": "off",
        "noUselessSwitchCase": "off",
        "noUselessTernary": "off",
        "noUselessThisAlias": "off",
        "useLiteralKeys": "off",
        "useOptionalChain": "off",
        "useRegexLiterals": "off"
      },
      "correctness": {
        "recommended": true,
        "noConstAssign": "error",
        "noConstantCondition": "off",
        "noEmptyCharacterClassInRegex": "off",
        "noEmptyPattern": "off",
        "noGlobalObjectCalls": "error",
        "noInnerDeclarations": "off",
        "noInvalidConstructorSuper": "error",
        "noPrecisionLoss": "off",
        "noSelfAssign": "off",
        "noSetterReturn": "off",
        "noSwitchDeclarations": "off",
        "noUndeclaredVariables": "error",
        "noUnreachable": "off",
        "noUnreachableSuper": "off",
        "noUnsafeFinally": "error",
        "noUnsafeOptionalChaining": "error",
        "noUnusedLabels": "off",
        "noUnusedVariables": "off",
        "noUnusedImports": "off",
        "noUnusedFunctionParameters": "off",
        "useIsNan": "error",
        "useValidForDirection": "off",
        "useYield": "off"
      },
      "nursery": {
        "recommended": false
      },
      "performance": {
        "recommended": true,
        "noAccumulatingSpread": "warn",
        "noDelete": "error"
      },
      "security": {
        "recommended": true,
        "noDangerouslySetInnerHtml": "error",
        "noGlobalEval": "error"
      },
      "style": {
        "recommended": true,
        "noImplicitBoolean": "off",
        "noNegationElse": "off",
        "noParameterAssign": "off",
        "noParameterProperties": "off",
        "noNonNullAssertion": "off",
        "noRestrictedGlobals": "error",
        "noShoutyConstants": "off",
        "noUnusedTemplateLiteral": "off",
        "noUselessElse": "off",
        "useAsConstAssertion": "off",
        "useBlockStatements": "off",
        "useCollapsedElseIf": "off",
        "useConst": "off",
        "useDefaultParameterLast": "off",
        "useExponentiationOperator": "off",
        "useForOf": "off",
        "useFragmentSyntax": "off",
        "useImportType": "off",
        "useNodejsImportProtocol": "off",
        "useNumberNamespace": "off",
        "useShorthandAssign": "off",
        "useShorthandFunctionType": "off",
        "useSingleVarDeclarator": "off",
        "useTemplate": "off"
      },
      "suspicious": {
        "recommended": true,
        "noApproximativeNumericConstant": "off",
        "noArrayIndexKey": "off",
        "noAssignInExpressions": "error",
        "noAsyncPromiseExecutor": "error",
        "noCatchAssign": "error",
        "noClassAssign": "error",
        "noCommentText": "off",
        "noCompareNegZero": "error",
        "noConsole": "off",
        "noControlCharactersInRegex": "error",
        "noDebugger": "warn",
        "noDoubleEquals": "off",
        "noDuplicateCase": "error",
        "noDuplicateClassMembers": "error",
        "noDuplicateJsxProps": "error",
        "noDuplicateObjectKeys": "error",
        "noDuplicateParameters": "error",
        "noEmptyBlockStatements": "off",
        "noExplicitAny": "off",
        "noFallthroughSwitchClause": "error",
        "noFocusedTests": "warn",
        "noFunctionAssign": "error",
        "noGlobalAssign": "error",
        "noImportAssign": "error",
        "noLabelVar": "error",
        "noMisleadingCharacterClass": "off",
        "noMisleadingInstantiator": "off",
        "noPrototypeBuiltins": "off",
        "noRedeclare": "error",
        "noSelfCompare": "off",
        "noShadowRestrictedNames": "error",
        "noSkippedTests": "off",
        "noSparseArray": "error",
        "noUnsafeDeclarationMerging": "error",
        "noUnsafeNegation": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteStyle": "double",
      "attributePosition": "auto",
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100,
      "lineEnding": "lf"
    },
    "globals": ["React", "JSX", "console", "process", "Buffer", "__dirname", "__filename"]
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100,
      "trailingCommas": "none"
    },
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": false
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100,
      "quoteStyle": "double"
    },
    "linter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "includes": ["*.config.*", "*.setup.*", "*.test.*", "*.spec.*"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.d.ts"],
      "linter": {
        "rules": {
          "style": {
            "useImportType": "off"
          }
        }
      }
    },
    {
      "includes": ["src/components/ui/**"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off"
          }
        }
      }
    }
  ]
}
